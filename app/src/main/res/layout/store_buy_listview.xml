<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_product_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/item1" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_name"
        android:layout_width="122dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="라이언 텀블러"
        app:layout_constraintEnd_toStartOf="@+id/btn_buy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/product_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_price"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="5000"
        app:layout_constraintBottom_toBottomOf="@+id/item_count3"
        app:layout_constraintStart_toEndOf="@+id/item_count3"
        app:layout_constraintTop_toTopOf="@+id/item_count3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_price2"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Point"
        app:layout_constraintBottom_toBottomOf="@+id/item_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_price"
        app:layout_constraintTop_toTopOf="@+id/item_price"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_count"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="12"
        app:layout_constraintBottom_toBottomOf="@+id/item_count2"
        app:layout_constraintStart_toEndOf="@+id/item_count2"
        app:layout_constraintTop_toTopOf="@+id/item_count2" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_count2"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="수량"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_count3"
        app:layout_constraintTop_toBottomOf="@+id/item_count3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:fontFamily = "@font/nanana"
        android:id="@+id/item_count3"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="가격"
        app:layout_constraintEnd_toEndOf="@+id/item_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

    <Button
        android:fontFamily = "@font/nanana"
        android:id="@+id/btn_buy"
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:text="구매하기"
        app:layout_constraintBottom_toBottomOf="@+id/item_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_price"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>