<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Myinfo_Modify">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/apeach" />

    <TextView
        android:id="@+id/edt_myinfo_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edt_myinfo_tellnum"
        app:layout_constraintStart_toStartOf="@+id/edt_myinfo_tellnum"
        app:layout_constraintTop_toBottomOf="@+id/edt_myinfo_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/edt_myinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이       름 : "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edt_myinfo_pw"
        app:layout_constraintStart_toStartOf="@+id/edt_myinfo_pw"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/edt_myinfo_tellnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="전화번호 : "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/edt_myinfo_pw" />

    <Button
        android:id="@+id/myinfo_btn_modify"
        android:layout_width="352dp"
        android:layout_height="39dp"
        android:text="수정완료"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/edt_myinfo_pw"
        app:layout_constraintStart_toStartOf="@+id/edt_tellnum"
        app:layout_constraintTop_toTopOf="@+id/edt_myinfo_pw" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/edt_myinfo_name"
        app:layout_constraintStart_toStartOf="@+id/edt_tellnum"
        app:layout_constraintTop_toTopOf="@+id/edt_myinfo_name" />

    <EditText
        android:id="@+id/edt_tellnum"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/edt_myinfo_tellnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_myinfo_tellnum"
        app:layout_constraintTop_toTopOf="@+id/edt_myinfo_tellnum" />

</androidx.constraintlayout.widget.ConstraintLayout>